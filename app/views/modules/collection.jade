table.ui.table.segment.sortable(data-model="#{resource.name}", data-path="#{resource.routes.query}")
  thead
    tr
      each field in fields
        td #{field}

  tbody
    each item in collection
      tr(data-model="#{resource.name}", data-path="#{resource.routes.query}/#{item[ idField ]}")
        each field in fields
          td
            if (field == idField)
              a(href="/#{resource.collection}/#{item[ field ]}") #{item[ field ]}
            else
              | #{item[ field ]}

  tfoot
    tr
      td #{collection.length} items
