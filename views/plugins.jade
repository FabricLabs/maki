extends layouts/default

block content
  h2 Maki Plugins
  
  .ui.divided.items
    for plugin in plugins
      a.item(href="https://github.com/martindale/#{plugin.name}")
        //-if (plugin.image)
          .image
            img(src="#{plugin.image}")
        .content
          .header #{plugin.name}
            .ui.label #{plugin.version}
            .ui.label #{plugin.coverage}%
          .description #{plugin.description}
